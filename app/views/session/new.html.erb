<button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#myModal">
  Login
</button>


<div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
      <% if flash[:alert] %>
        <div class="alert alert-info" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <span class="sr-only">Error:</span>
          <%= flash[:alert] %>
        </div>
      <% end %>
      <%= form_tag do %>
        <fieldset>
          <legend>Please Log in</legend>
          <div>
            <%= label_tag :name, 'Name', class: "login-font"  %>
            <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "Please enter your Name" %> 
            <%= label_tag :password, 'Password',class: "login-font" %>
            <%= password_field_tag :password, params[:password],class: "form-control", placeholder: "Please enter your Password" %>
            <%= submit_tag "Login" %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>